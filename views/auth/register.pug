doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', type='text/css', href='css/main.css')
        link(rel='stylesheet', type='text/css', href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css')
        link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
        title='Registro - Galileo Champions'
    body
        section(class='material-half-bg')
            div(class='cover')
        section(class='login-content')
            div(class='logo')
                h1 Galileo Champions
            .tile
                if errors && errors.length
                    .bs-component
                        .alert.alert-dismissible.alert-danger
                            button(class='close', type='button', data-dismiss='alert') ×
                            .strong Oh no! por favor revisa los errors
                            ul
                                each error in errors
                                    li=error.msg || error
                h3(class='tile-title') Registro
                form(class='form-horizontal', method='POST', action='/register', id='registerForm')
                    .tile-body
                        input(type='hidden', name='_csrf', value=csrfToken)
                        input(type='hidden', name='provider', value=provider)
                        input(type='hidden', name='role', value=role)
                        .form-group.row
                            label.control-label.col-md-3 Name
                            .col-md-8
                                input(class='form-control', type='text', placeholder='Nombres', name='firstname')
                        .form-group.row
                            label.control-label.col-md-3 Apellidos
                            .col-md-8
                                input(class='form-control', type='text', placeholder='Apellidos', name='lastname')
                        .form-group.row
                            label.control-label.col-md-3 Email
                            .col-md-8
                                input(class='form-control col-md-8', type='email', placeholder='Ingrese su email', name='email')
                        .form-group.row
                            label.control-label.col-md-3 Contraseña
                            .col-md-8
                                input(class='form-control col-md-8', type='password', placeholder='Ingrese su contraseña', name='password')
                        .form-group.row
                            label.control-label.col-md-3 Confirma tu contraseña
                            .col-md-8
                                input(class='form-control col-md-8', type='password', placeholder='Ingrese su contraseña', name='confirmPassword')
                    .tile-footer
                        .row
                            .col-md-8.col-md-offset-3
                                button(class='btn btn-primary', type='submit') Register
                                    i.fa.fa-fw.fa-lg.fa-check-circle
                                span &nbsp;&nbsp;
                                a(class='btn btn-secondary', href='/') Cancel
                                    i.fa.fa-fw.fa-lg.fa-times-circle

        include /includes/_javascript

        script(type='text/javascript').

            $("#registerForm").submit(() => {
                $('#registerForm button').attr("disabled", true);
            });
doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', type='text/css', href='/css/main.css')
        link(rel='stylesheet', type='text/css', href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css')
        link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
        title='Registro - Galileo Champions'
    body
        section(class='material-half-bg')
            div(class='cover')
        section(class='login-content')
            div(class='logo')
                h1 Galileo Champions
            .tile
                if errors && errors.length
                    .bs-component
                        .alert.alert-dismissible.alert-danger
                            button(class='close', type='button', data-dismiss='alert') ×
                            .strong Oh no! por favor revisa los errors
                            ul
                                each error in errors
                                    li=error.msg || error
                h3(class='tile-title') Reinicio de contraseña
                form(class='form-horizontal', method='POST', action='/reset-password', id='resetPasswordForm')
                    .tile-body
                        input(type='hidden', name='_csrf', value=csrfToken)
                        input(type='hidden', name='token', value=token)
                        .form-group.row
                            label.control-label.col-md-5 Contraseña
                            .col-md-7
                                input(class='form-control', type='password', id='password',
                                    placeholder='Ingrese su contraseña', name='password', required)
                        .form-group.row
                            label.control-label.col-md-5 De nuevo!
                            .col-md-7
                                input(class='form-control', type='password', id='confirmPassword',
                                    placeholder='Ingrese su contraseña', name='confirmPassword', required)
                    .tile-footer
                        .row
                            .col-md-8.col-md-offset-3.text-center
                                button(class='btn btn-primary', type='submit') Reiniciar
                                    i.fa.fa-fw.fa-lg.fa-check-circle

        include /includes/_javascript


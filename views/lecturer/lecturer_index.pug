block variables
    - var activePage = 'lecturerIndex';

block title
    title Portal catedráticos

block content
    .app-title
        div
            h1
                i.fa.fa-hashtag
                |  Champion Points
            p Asignación de Champion Points

        ul.app-breadcrumb.breadcrumb
            li.breadcrumb-item
                i.fa.fa-hashtag.fa-lg
            li.breadcrumb-item

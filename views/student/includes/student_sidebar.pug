.app-sidebar__overlay(data-toggle="sidebar")
aside.app-sidebar

    .app-sidebar__user
        //img.app-sidebar__user-avatar(src='https://s3.amazonaws.com/uifaces/faces/twitter/jsa/48.jpg', alt='User Image')
        i.fa.fa-lg.fa-user-circle-o.fa-3x.app-sidebar__user-avatar
        div
            p.app-sidebar__user-name=user.firstname
            p.app-sidebar__user-designation Estudiante

    ul.app-menu
        li
            a.app-menu__item(href=activePage != 'studentIndex' ? '/student': '#' class={'active': activePage == 'studentIndex'})
                i.app-menu__icon.fa.fa-home
                span.app-menu__label Home

        li
            a.app-menu__item(href=activePage != 'championPoints' ? '/student/champion-points':'#' class={'active': activePage == 'championPoints'})
                i.app-menu__icon.fa.fa-hashtag
                span.app-menu__label Champion Points

        li
            a.app-menu__item(href=activePage != "rockstarSummary"? "/student/rockstar-summary":"#" class={'active': activePage == 'rockstarSummary'})
                i.app-menu__icon.fa.fa-star
                span.app-menu__label Galileo Rockstar

        li
            a.app-menu__item(href=activePage != "userProfile"? "/student/profile":"#" class={'active': activePage == 'userProfile'})
                i.app-menu__icon.fa.fa-user
                span.app-menu__label Mi perfil